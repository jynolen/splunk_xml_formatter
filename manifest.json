{
    "name": "Splunk XML Formatter",
    "version": "1.0",
    "description": "With this extension, you can add syntax highlight / formatting for XML events in Splunk",
    "manifest_version": 2,
    "permissions": [
        "background", 
        "tabs", 
        "activeTab",
        "<all_urls>", 
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["./jquery.min.js", "./highlight.pack.js", "./splunk_xml.js"],
          "css":["./styles/splunk_xml.css", "./styles/github-gist.css"],
          "run_at": "document_end"
        }
    ]
}
