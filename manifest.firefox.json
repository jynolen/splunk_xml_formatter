{
    "name": "Splunk XML Formatter",
    "version": "1.1",
    "description": "With this extension, you can add syntax highlight / formatting for XML events in Splunk",
    "manifest_version": 2,
    "author": "Jean-Yves NOLEN <jynolen@gmail.com>",
    "short_name": "SplkXMLFormat",
    "permissions": [
        "tabs", 
        "activeTab", 
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["./jquery.min.js", "./highlight.pack.js", "./splunk_xml.js"],
          "css":["./styles/splunk_xml.css", "./styles/github-gist.css"],
          "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "splunk_xml_formatter_test@jynolen.com",
          "strict_min_version": "57.0"
        }
    }
}